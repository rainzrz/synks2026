# ==============================================
# SYNKS APPLICATION - ENVIRONMENT CONFIGURATION
# ==============================================

# Backend Configuration
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0

# Frontend Configuration
FRONTEND_PORT=80

# Database Configuration
DB_NAME=portal.db
DB_PATH=/app/data/portal.db

# Session Configuration
SESSION_EXPIRY_HOURS=8
CACHE_EXPIRY_MINUTES=15

# GitLab/Mint Configuration
MINT_URL=http://mint.systemhaus.com.br:9070

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost,http://localhost:80

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Environment
ENVIRONMENT=development
