{
  "name": "customer-portal-electron",
  "version": "1.0.0",
  "description": "Customer Portal Desktop Application",
  "main": "main.js",
  "scripts": {
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "electron:build": "electron-builder",
    "start": "npm run electron:dev"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "electron": "^28.0.0"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.customerportal.app",
    "productName": "Customer Portal",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*",
      "backend/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "electron/assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "electron/assets/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "electron/assets/icon.icns"
    }
  }
}